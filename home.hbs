{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{!-- The main content area - Masonry grid --}}
<main id="content" class="container" role="main">
    {{#get "posts" filter="featured:true" limit="4" include="author,tags"}}
        {{#if posts}}
        <div class="row">
            <div class="col-md-12">
                <h3 class="title">Featured</h3>
                <div class="featured-slider">
                    <div class="swiper-button-prev"><i class="fa fa-angle-left" aria-hidden="true"></i></div>
                    <div class="swiper-button-next"><i class="fa fa-angle-right" aria-hidden="true"></i></div>
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                            {{#foreach posts}}
                                <div class="swiper-slide">
                                    {{> "loop-big"}}
                                </div>
                            {{/foreach}} 
                        </div>
                    </div>
                </div>
                <ul class="featured-navigation">
                    {{#foreach posts}}
                        <li>{{title}}</li>
                    {{/foreach}} 
                </ul>
            </div>
        </div>
        {{/if}}
    {{/get}}

    <div class="row">
        <div class="col-md-12">
            <h3 class="title">Recent articles</h3>
            <div class="recent-slider loop">
                <div class="swiper-button-prev"><i class="fa fa-angle-left" aria-hidden="true"></i></div>
                <div class="swiper-button-next"><i class="fa fa-angle-right" aria-hidden="true"></i></div>
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        {{#get "posts" limit="4" filter="featured:false"}}
                            {{#foreach posts}}
                                <div class="swiper-slide">
                                    {{> "loop"}}
                                </div>
                            {{/foreach}} 
                        {{/get}}
                        {{#get "posts" limit="4" page="2" filter="featured:false"}}
                            {{#foreach posts}}
                                <div class="swiper-slide">
                                    {{> "loop"}}
                                </div>
                            {{/foreach}} 
                        {{/get}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            {{#get "tags" limit="all"}}
                {{#foreach tags}}
                    <h3 class="title">{{name}}</h3>
                    <a href="/tag/{{slug}}" class="view-all">View all</a>
                    <div class="row loop-big">
                        <div class="col-md-12">
                            {{#get "posts" limit="1" include="author,tags" filter="tag:{{slug}}"}}
                                {{#foreach posts}}
                                    {{> "loop-big"}}
                                {{/foreach}}
                            {{/get}}
                        </div>
                    </div>
                    {{#get "posts" limit="7" filter="tag:{{slug}}"}}
                        <div class="row loop-small">
                            {{#foreach posts}}
                                {{^if @first}}
                                <div class="col-md-4">
                                    {{> "loop-small"}}
                                </div>
                                {{/if}}
                            {{/foreach}}
                        </div>
                    {{/get}}
                {{/foreach}}
            {{/get}}
        </div>
        <div class="col-md-4">
            <div class="widget latest-comments">
                <h3>Latest comments</h3>
                <script type="text/javascript" src="http://hauntedthemes-demo.disqus.com/recent_comments_widget.js?num_items=5&hide_avatars=1&excerpt_length=100"></script>
            </div>
            <div class="widget popular-threads">
                <h3>Popular threads</h3>
                <script type="text/javascript" src="http://hauntedthemes-demo.disqus.com/popular_threads_widget.js"></script>
            </div>
            <div class="widget most-viewed">
                <h3>Most viewed</h3>
                <ul></ul>
            </div>
            <div class="widget top-authors">
                <h3>Top authors</h3>
                {{#get "users" limit="6" include="count.posts" order="count.posts desc"}}
                    <ul>
                        {{#foreach users}}
                            <li>
                                {{#if profile_image}}
                                <figure class="author-image">
                                    <a class="img" href="{{url}}" title="{{name}}"><img src="{{img_url profile_image}}" alt="{{name}}"></a>
                                </figure>
                                {{else}}
                                <a class="no-img" href="{{url}}" title="{{name}}"></a>
                                {{/if}}
                                <a href="/tag/{{slug}}" class="link">{{name}}</a>
                            </li>
                        {{/foreach}}
                    </ul>
                {{/get}}
            </div>
        </div>
    </div>

</main>
