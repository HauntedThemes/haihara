{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{!-- The main content area --}}
<main id="content" role="main">

    {{#tag}}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1 class="name">{{name}}</h1>
			</div>
		</div>
	</div>
    {{/tag}}

	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				{{#if posts}}
					<div class="loop-medium">
						{{#foreach posts}}
			    			{{> "loop-medium"}}
					    {{/foreach}}
					</div>
					{{pagination}}
				{{else}}
                    {{#if @labs.publicAPI}}
    					<h2>{{t "There are no posts in {name}" name=tag.name}}.</h2>
                        <div class="related-posts">
                            {{#get "posts" limit="1" include="tags"}}
                                <h3 class="title">{{t "You might like something else"}}</h3>
                                <div class="row loop-big">
                                    <div class="col-md-12">
                                        {{#foreach posts}}
                                            {{> "loop-big"}}
                                        {{/foreach}}
                                    </div>
                                </div>
                            {{/get}}
                            {{#get "posts" limit="7" include="tags"}}
                                <div class="row loop-small">
                                    {{#foreach posts}}
                                        {{^if @first}}
                                        <div class="col-md-4">
                                            {{> "loop-small"}}
                                        </div>
                                        {{/if}}
                                    {{/foreach}}
                                </div>
                            {{/get}}
                        </div>
                    {{/if}}
				{{/if}}
			</div>
            <div class="col-lg-4">
                {{> "sidebar"}}
            </div>
		</div>
	</div>

</main>