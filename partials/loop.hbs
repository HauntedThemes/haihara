{{!-- This is the post loop - each post will be output using this markup --}}
<article class="{{post_class}} post-card">
    <div class="content">
        <div class="content-holder">
            <h3 class="post-title"><a href="{{url}}" title="{{title}}">{{title}}</a></h2>
            <p>
                {{excerpt words="22"}}
            </p>
            <a href="{{url}}" title="{{title}}" class="read-more">Read more</a>
        </div>
        <div class="img-holder">
            <a href="{{url}}" title="{{title}}">
                {{#if feature_image}}
                    <img src="{{img_url feature_image}}" alt="{{title}}">
                {{/if}}
            </a>
        </div>
    </div>
</article>