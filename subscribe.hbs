<!DOCTYPE html>
<html>
<head>

    {{> theme_head}}

    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}
    
</head>
<body class="subscribe">

    <div class="main-container">
        <header>
            <a href="{{@blog.url}}" class="back" title="Back"></a>
        </header>
    </div>

    <main id="content" class="container content-inner" role="main">
        <article class="{{post_class}}">
            <h1 class="post-title">
                {{^if success}}
                    Subscribe to {{@blog.title}}
                {{else}}
                    Subscribed!
                {{/if}}
            </h1>
            <section class="post-content">
                {{^if success}}
                    {{subscribe_form
                        form_class="gh-signin"
                        input_class="gh-input"
                        button_class="btn btn-blue btn-block"
                        placeholder="Your email address"
                        autofocus="true"
                    }}
                {{else}}
                    <p>
                        You've successfully subscribed to <em>{{@blog.title}}</em>
                        with the email address <em>{{email}}</em>.
                    </p>
                {{/if}}
            </section>
        </article>
    </main>


    {{!-- jQuery needs to come before `{{ghost_foot}}` so that jQuery can be used in code injection --}}
    <script type="text/javascript" src="{{asset "js/jquery-1.12.4.min.js"}}"></script>

    {{!-- 3rd party scripts --}}
    <script type="text/javascript" src="{{asset "js/libraries.js"}}"></script>

    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}
    
    {{!-- The main JavaScript file for Leap --}}
    <script type="text/javascript" src="{{asset "js/main.js"}}"></script>

</body>
</html>
